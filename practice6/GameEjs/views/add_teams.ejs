<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Team</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/addTeam" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required />
                        </div>
                        <div class="mb-3">
                            <label for="score">Score</label>
                            <input type="text" name="score" class="form-control form-control-lg" placeholder="Enter score Team" required />
                        </div>
                        <div class="mb-3">
                            <label for="logo" class="form-label">Select Image Logo</label>
                            <input type="file" name="logo" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Team" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
