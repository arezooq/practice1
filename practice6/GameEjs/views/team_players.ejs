<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if (data != '') { %>
                    <table class="table tale-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>IMAGE</th>
                                <th>Name</th>
                                <th>AGE</th>
                                <th>POSITION</th>
                                <th>ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.age %></td>
                                    <td><%= row.position %></td>
                                    <td>
                                        <a href="/edit/<%= row.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row.id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                          
                        </tbody>
                    </table>
                 
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No players found in the database!</h1>
                    <% } %>

                </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
